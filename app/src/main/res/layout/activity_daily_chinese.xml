<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daily_chinese">

    <include layout="@layout/toolbar_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/dailyWord"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="Daily Word" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/dailyWord"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#161415" />

                <TextView
                    android:id="@+id/hanzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习"
                    android:layout_below="@id/view1"
                    android:textColor="#161415"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pinyin"
                    android:layout_below="@id/hanzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Xuéxí" />


                <TextView
                    android:id="@+id/english"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pinyin"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:text="To learn" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="8dp"
                    android:id="@+id/dailyPassage"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="Daily Passage" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/dailyPassage"
                    android:layout_height="1dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#161415" />

                <TextView
                    android:id="@+id/hanziPassage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可以问一下你吗"
                    android:layout_below="@id/view2"
                    android:textColor="#161415"
                    android:textSize="18sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pinyinPassage"
                    android:layout_below="@id/hanziPassage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Kěyǐ wèn yīxià nǐ ma" />


                <TextView
                    android:id="@+id/englishPassage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pinyinPassage"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:text="may i ask you" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>





</LinearLayout>